<li>
    <div class="comment-main-level">
        <div class="comment-box">
            <div class="comment-head">
                <h6 class="comment-name">{{ comment.user.firstName }} {{ comment.user.lastName }}</h6>
                <span>on {{ comment.createdAt }}</span>
            </div>
            <div class="comment-content">
                {{ comment.text }}
            </div>
        </div>
    </div>
</li>